<div class="container">

  <h1>New review for <%= @restaurant.name %></h1>

  <div>
    <%= simple_form_for([@restaurant, @review]) do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.submit 'submit', class: 'btn btn-primary w-100' %>
    <% end %>
  </div>

</div>
